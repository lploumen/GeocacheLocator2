<UserControl
    x:Class="GeocacheLocatorV2.UWP.Controls.GeoPushPin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Width="55" Height="55" BorderThickness="2">
        <Polygon Margin="0,24.5,0,0"  Points="20,20 25.5,26 31,20" Stroke="{Binding Stroke, ElementName=outside}" Fill="White"  />
        <Ellipse x:Name="outside" StrokeThickness="2" Width="40" Height="40" Fill="White" Stroke="Orange"></Ellipse>
        <Image x:Name="image" Width="35" Height="35" Source="/Assets/PinImages/type_traditional.png"/>
    </Grid>
</UserControl>
